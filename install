installFiles=$(find . -name "install.sh")

# sort the files by folder name
installFiles=$(echo $installFiles | tr " " "\n" | sort)

# make the name by last folder in the path
folderStart=$(pwd)

# Function to display the menu
display_menu() {
    tput civis   # Hide cursor
    tput cup 0 0 # Move cursor to top-left corner
    echo "Install Menu use arrow keys or w and s to move up and down, Enter start install"
    echo "------------"
    i=0
    for file in $installFiles; do
        i=$((i + 1))
        folder=$(dirname $file)
        folderName=$(basename $folder)
        if [ $i -eq $selected ]; then
            echo " --> $folderName"
        else
            echo "     $folderName"
        fi
    done
    echo "     q to Quit"
    echo "------------"
    tput cnorm # Show cursor
}

# Initialize selected option
selected=1

# Main loop
tput clear
while true; do
    display_menu
    read -rsn1 input
    case $input in
    q) break ;;
    A | w) # Up arrow or 'w'
        if [ $selected -gt 1 ]; then
            selected=$((selected - 1))
        fi
        ;;
    B | s) # Down arrow or 's'
        if [ $selected -lt $i ]; then
            selected=$((selected + 1))
        fi
        ;;
    "") # Enter key
        if [ $selected -gt 0 ] && [ $selected -le $i ]; then
            folder=$(dirname $(echo $installFiles | tr " " "\n" | sed -n "${selected}p"))
            cd $folder
            ./install.sh
            cd $folderStart
        fi
        ;;
    esac
done
tput cnorm # Ensure cursor is shown when script exits
